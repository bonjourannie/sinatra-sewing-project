<h1>Edit sewing project</h1>

<div class="btn-group">
<form method="POST" action="/projetcs/<%= @project.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label><br>
  <input type="text" name="name" id="name" value="<%= @project.name %>"></br>
  <br>
  <label>Ingredients:</label><br>
  <textarea type="text" name="materials" id="materials"><%= @project.materials %></textarea></br>
  <br>
  <label>Instructions:</label><br>
  <textarea type="text" name="instructions" id="instructions" ><%= @project.instructions %></textarea></br>
  <br>
  <input type="submit" class="button" value="Submit"></br>
</form>
</div>